<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/levelbackgrond"
    tools:context=".Login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#38b6FF"
        android:clickable="true">

        <ImageView
            android:id="@+id/nextbtn"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:src="@drawable/previous"
            android:padding="10dp"
            android:layout_alignTop="@+id/Imglogo"
            android:forceHasOverlappingRendering="false"
            />

        <ImageView
            android:id="@+id/Imglogo"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:src="@drawable/hoasen" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imglogo"
            >

            <ImageView
                android:id="@+id/buttonEasy"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10pt"
                android:src="@drawable/one" />

            <TextView
                android:id="@+id/txtone"
                android:layout_marginTop="20dp"
                android:layout_width="258dp"
                android:layout_height="80dp"
                android:text="Mức độ dễ"
                android:textSize="40dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            >
            <ImageView
                android:id="@+id/buttonMedium"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10pt"
                android:src="@drawable/hand" />

            <TextView
                android:id="@+id/txttwo"
                android:layout_marginTop="20dp"
                android:layout_width="258dp"
                android:layout_height="80dp"
                android:text="Mức độ trung"
                android:textSize="40dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            >
            <ImageView
                android:id="@+id/buttonHard"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10pt"
                android:src="@drawable/three" />

            <TextView
                android:id="@+id/txtthree"
                android:layout_marginTop="20dp"
                android:layout_width="258dp"
                android:layout_height="80dp"
                android:text="Mức độ khó"
                android:textSize="40dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
        </LinearLayout>

    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>