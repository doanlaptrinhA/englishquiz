<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/levelbackgrond"
    tools:context=".Login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#38b6FF"
        android:clickable="true">

        <ImageView
            android:id="@+id/nextbtn"
            android:layout_width="97dp"
            android:layout_height="95dp"
            android:forceHasOverlappingRendering="false"
            android:padding="10dp"
            android:src="@drawable/previous" />

        <ImageView
            android:id="@+id/Imglogo"
            android:layout_width="423dp"
            android:layout_height="261dp"
            android:layout_gravity="center"
            android:src="@drawable/hoasen"
            android:layout_below="@id/nextbtn"/>

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imglogo"
            >

            <ImageView
                android:id="@+id/buttonEasy"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10pt"
                android:src="@drawable/one" />

            <TextView
                android:id="@+id/txtone"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center_horizontal"
                android:text="Easy"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            >
            <ImageView
                android:id="@+id/buttonMedium"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10pt"
                android:src="@drawable/hand" />

            <TextView
                android:id="@+id/txttwo"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="13dp"
                android:gravity="center_horizontal"
                android:text="Medium"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            >
            <ImageView
                android:id="@+id/buttonHard"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10pt"
                android:src="@drawable/three" />

            <TextView
                android:id="@+id/txtthree"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center_horizontal"
                android:text="Hard"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>