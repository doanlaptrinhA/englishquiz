<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38b6ff"
    tools:context=".Random">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#38b6FF">

        <ImageView
            android:id="@+id/nextbtn"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:forceHasOverlappingRendering="false"
            android:padding="10dp"
            android:src="@drawable/previous" />

        <ImageView
            android:id="@+id/Imglogo"
            android:layout_width="423dp"
            android:layout_height="261dp"
            android:layout_gravity="center"
            android:src="@drawable/hoasen"
            android:layout_below="@id/nextbtn"/>


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imglogo"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/buttonEasy"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/nam" />

            <TextView
                android:id="@+id/txt5q"
                android:layout_width="249dp"
                android:layout_height="63dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Chọn 5 câu"
                android:textColor="#ffffff"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        >
        <ImageView
            android:id="@+id/btn10q"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ten" />

        <TextView
            android:id="@+id/txt10q"
            android:layout_width="244dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Chọn 10 câu"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>