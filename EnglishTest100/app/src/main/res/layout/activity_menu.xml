<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38b6FF"
    tools:context=".Menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/QuestionButton"
            android:layout_width="87dp"
            android:layout_height="80dp"
            android:forceHasOverlappingRendering="false"
            android:padding="10dp"
            android:src="@drawable/question" />

        <ImageView
            android:id="@+id/AccountButton"
            android:layout_width="90dp"
            android:layout_height="88dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_marginRight="-1dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/account" />

        <ImageView
            android:id="@+id/Img"
            android:layout_below="@id/QuestionButton"
            android:layout_width="423dp"
            android:layout_height="261dp"
            android:layout_gravity="center"
            android:src="@drawable/hoasen"

            />

        <ImageView
            android:id="@+id/buttonTest"
            android:layout_width="115dp"
            android:layout_height="96dp"
            android:layout_below="@id/Img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/playbutton" />

        <TextView
            android:id="@+id/PlayText"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonTest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"

            android:text="Play"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/buttonRank"
            android:layout_width="103dp"
            android:layout_height="91dp"
            android:layout_below="@id/buttonTest"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/emblem"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/buttonReturnLogin"
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:layout_below="@id/buttonTest"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/logout" />


        <TextView
            android:id="@+id/AchiveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonRank"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="HighScore"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/QuitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonReturnLogin"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:text="Exit"
            android:textStyle="bold"
            android:layout_marginRight="45dp"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>