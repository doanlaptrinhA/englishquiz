<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38b6ff"
    tools:context=".LoadingLevel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#38b6FF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nextbtn"
            android:layout_width="97dp"
            android:layout_height="95dp"
            android:forceHasOverlappingRendering="false"
            android:padding="10dp"
            android:src="@drawable/previous" />

        <ImageView
            android:id="@+id/Imglogo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/nextbtn"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:src="@drawable/hoasen" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Imglogo"
            android:layout_centerHorizontal="true"
            android:background="#38b6FF"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnEasy"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/buttonstyle"
                android:drawableRight="@drawable/teststar2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Easy"
                android:textColor="#38b6FF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMedium"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonstyle"
                android:drawableRight="@drawable/twostars"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Medium"
                android:textColor="#38b6FF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnHard"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonstyle"
                android:drawableRight="@drawable/threestars"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Hard"
                android:textColor="#38b6FF"
                android:textSize="20dp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>
        >

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>